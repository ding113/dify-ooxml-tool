# Dify Plugin Development Configuration

# Remote Debugging Configuration
INSTALL_METHOD=remote
REMOTE_INSTALL_URL=debug.dify.ai
REMOTE_INSTALL_PORT=5003
REMOTE_INSTALL_KEY=********-****-****-****-************

# Logging Configuration
# Log levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
PLUGIN_LOG_LEVEL=DEBUG

# Enable detailed logging for specific components
ENABLE_OOXML_PARSER_DEBUG=true
ENABLE_REBUILDER_DEBUG=true
ENABLE_STORAGE_DEBUG=true
ENABLE_PERFORMANCE_LOGGING=true

# Development Environment Settings
DEV_MODE=true
DEBUG_TOOL_EXECUTION=true
VERBOSE_ERROR_MESSAGES=true

# Performance Monitoring
ENABLE_EXECUTION_TIMING=true
LOG_MEMORY_USAGE=true
LOG_FILE_OPERATIONS=true

# Storage and File Handling
MAX_FILE_SIZE_MB=50
MAX_STORAGE_SIZE_MB=200
TEMP_FILE_CLEANUP=true

# Plugin-specific Configuration
ENABLE_TEXT_PREVIEW_LOGGING=true
MAX_LOG_TEXT_LENGTH=100
LOG_TRANSLATION_SAMPLES=5

# Error Handling and Recovery
ENABLE_ERROR_RECOVERY=true
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY_SECONDS=1

# Testing and Validation
ENABLE_VALIDATION_CHECKS=true
STRICT_TYPE_CHECKING=true
VALIDATE_XML_INTEGRITY=true
